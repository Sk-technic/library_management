<%- include('layout') %>

<form action="/login" method="POST" class="max-w-md mx-auto bg-white p-10 mt-6 space-y-4">
    <h2 class="text-2xl font-bold text-center">login <span class="text-purple-600"><i class="fas fa-book-reader mr-2"></i>library</span></h2>
    <div>
        <label class="block">Email</label>
        <input type="email" name="email" required class="w-full px-4 py-2 border rounded-lg">
    </div>
    <div>
        <label class="block">Password</label>
        <input type="password" name="password" required class="w-full px-4 py-2 border rounded-lg">
    </div>
    <button class="w-full bg-purple-500 hover:bg-lime-600 text-white py-2 rounded-lg hover:bg-blue-600">Login</button>
    <p class="text-center text-gray-600 mt-4">
        Don't have an account? 
        <a href="/register" class="text-purple-600 hover:underline">Register here</a>
    </p>
</form>

